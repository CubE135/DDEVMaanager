{
  "name": "ddevmanager",
  "productName": "DDEVManager",
  "version": "1.0.0",
  "description": "A fancy application to manage DDEV projects.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "CubE135",
    "email": "myaddi08@yahoo.de"
  },
  "license": "MIT",
  "build": {
    "productName": "DDEVManager",
    "appId": "ddevmanager",
    "win": {
      "icon": "src/assets/img/icon.ico"
    },
    "nsis": {
      "installerIcon": "src/assets/img/icon.ico",
      "uninstallerIcon": "src/assets/img/icon.ico",
      "uninstallDisplayName": "${productName}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ddevmanager"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CubE135/DDEVMaanager.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "12.0.0",
    "electron-builder": "^22.10.5"
  }
}
